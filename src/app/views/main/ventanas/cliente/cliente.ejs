<section class="contenedor" id="formulario">

<form class="formulario" action="/cli_input" method="POST">

<div class="subtitulo"><h4>Registrar Cliente</h4></div>

<div class="formulario__grupo-input" id="grupo__Nombre">
  <label for="Nombre" class="formulario__label fw-normal">Nombre</label>
  <input type="text" class="formulario__input" name="Nombre" required id="Nombre" placeholder="Pepito" value="">
  <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
  <div class="formulario__input-error"><p>SOLO LETRAS EN MAYUSCULA, 1 A 40 DIGITOS.</p></div>
</div>


<div class="formulario__grupo-input" id="grupo__Apellido">
<label for="Apellido" class="formulario__label fw-normal">Apellidos</label>
  <input type="text" class="formulario__input" name="Apellido" required id="Apellido" placeholder="Perez" value="">
  <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
  <div class="formulario__input-error"><p>SOLO LETRAS EN MAYUSCULA, 1 A 40 DIGITOS.</p></div>
</div>
    
    <div class="formulario__grupo-input" id="grupo__Cedula">
      <label class="formulario__label fw-normal" for="Cedula fw-normal">Cedula</label>
        <input type="text" class="formulario__input" name="Cedula" required id="Cedula" placeholder="1234567892" value="">
        <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
        <div class="formulario__input-error"><p>SOLO NUMEROS, 7 A 14 DIGITOS.</p></div>
    </div>
      
      <div class="formulario__grupo-input" id="grupo__Email">
        <label class="formulario__label fw-normal" for="Email">E-mail</label>
          <input type="text" class="formulario__input" name="Email" required id="Email" placeholder="correo@correo.com" value="">
          <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
          <div class="formulario__input-error"><p>DE 10 A 14 DIGITOS.</p></div>
      </div>

      <div class="formulario__grupo-input" id="grupo__Direccion">
        <label class="formulario__label fw-normal" for="direccion">Dirección</label>
          <input type="text" class="formulario__input" name="direccion" required id="direccion" placeholder="Crr 1 #2 - 3" value="">
          <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
          <div class="formulario__input-error"><p>DE 10 A 14 DIGITOS.</p></div>
      </div>

      <div class="formulario__grupo-input" id="grupo__Ciudad">
        <label class="formulario__label fw-normal" for="ciudad">Ciudad</label>
          <input type="text" class="formulario__input" name="ciudad" required id="ciudad" placeholder="Medellín" value="">
          <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
          <div class="formulario__input-error"><p>DE 10 A 14 DIGITOS.</p></div>
      </div>

      <div class="formulario__grupo-input" id="grupo__Celular">
        <label class="formulario__label fw-normal" for="Cargo">Celular</label>
          <input type="text" class="formulario__input" name="celular" required id="celular" placeholder="300-123-45-67" value="">
          <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
          <div class="formulario__input-error"><p>SOLO NUMEROS, DE 10 A 14 DIGITOS.</p></div>
      </div>
      <div class="formulario__grupo-input" id="grupo__Telefono">
        <label class="formulario__label fw-normal" for="Cargo">Telefono</label>
          <input type="text" class="formulario__input" name="telefono" required id="telefono" placeholder="123-45-67" value="">
          <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
          <div class="formulario__input-error"><p>SOLO NUMEROS, DE 10 A 14 DIGITOS.</p></div>
      </div>
      <div class="formulario__grupo-input" id="grupo__FNacimiento">
        <label class="formulario__label fw-normal" for="Cargo">Fecha de Nacimiento</label>
          <input type="text" class="formulario__input" name="F_nacimiento" required id="F_nacimiento" placeholder="DD/MM/AÑO" value="">
          <div class="formulario__validacion-estado"><i class= "fas fa-times-circle"></i></div>
          <div class="formulario__input-error"><p>DE 10 A 14 DIGITOS.</p></div>
      </div>
      
