</div>

<div class="contenedor">

    <h5>Ingreso de existencias</h5>

        <form action="/inventario" method="POST" class="fila">

        <select style="grid-column: span 10; align-items: center; justify-content: center; margin:auto; " name="selec_inv" class="form-select form-select-sm" aria-label=".form-select-sm example">
            <option selected>Seleccione inventario</option>
            <option value="1">Tienda</option>
            <option value="2">Bodega</option>
        </select>

            <div style="grid-column: span 10; align-items: center; justify-content: center; margin:auto; ">
                <div class="cajita">
                    <img  src="/resource/css/inventario/utils/no-image-icon-23485.png" width="100" height="100">
                </div>

                <div class="cajita">
                    <button type="button" class="btn btn-primary btn-sm">Cargar Imagen</button>
                </div>
            </div>

            <div>
                <label for="formGroupExampleInput" class="form-label fw-bolder">Referencia </label>
                <input name="referencia" type="text" class="form-control" >
            </div>

            <div>
                <label for="formGroupExampleInput" class="form-label fw-bolder">Nombre producto </label>
                <input name="producto" type="text" class="form-control" >
            </div>

            <div>
                <label for="formGroupExampleInput" class="form-label fw-bolder">Cantidad </label>
                <input name="cantidad" type="text" class="form-control" >
            </div>

            <div>
                <label for="formGroupExampleInput" class="form-label fw-bolder">Valor unitario</label>
                <input name="valor" type="text" class="form-control" >
            </div>

            <div>
                <label for="formGroupExampleInput" class="form-label fw-bolder">Descripción </label>
                <input name="descripcion" type="text" class="form-control" >
            </div>

            <a type="button" style="display:flex; grid-column: span 10; justify-content: flex-start; align-items: center; " href="/insertInsumo"><span class="material-icons">local_hospital</span></a>

            <div class="fila1" style="grid-column: span 10; align-items: center; justify-content: center; margin:auto; ">
                
                <% for(let i of insuComf) {%>
                    <div>
                        <label for="formGroupExampleInput" class="form-label fw-bolder">Insumo</label>
                        <input type="text" name ="ref_insu_pro" class="form-control"></input>
                        
                        <label for="formGroupExampleInput" class="form-label fw-bolder">Cantidad</label>
                        <input type="text" name="cant_insu_pro" class="form-control"></input>
                    </div>
                
                <% } %>

            </div>

        <div style="grid-column: span 10; align-items: center; justify-content: center; margin:auto; ">
            <button class="btn btn-primary me-md-2" type="submit">Ingresar</button>
        </div>

        </form>



</div>

           <div style="display:flex; margin:30px; justify-content:center; align-items:center;">
             <a href="/main" class="btn btn-primary" >Regresar</a>
            </div>

    <%- include("../../template/footer/footer.ejs") %> 

